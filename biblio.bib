@article{Aratri:VSD:2024,
	author = {Roberto Aratri and Giuseppe Guastadisegni and Stefano De Pinto and Arnau Doria-Cerezo and Aldo Sorniotti and Francesco Bottiglione and Giacomo Mantriota},
	title = {Feasibility region analysis of active systems: investigating the lateral performance envelope of sports cars},
	journal = {Vehicle System Dynamics},
	volume = {0},
